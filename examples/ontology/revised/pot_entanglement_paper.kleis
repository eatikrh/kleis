define sec_numerical = ArxivSection("Numerical Results",
"We present numerical computations that visualize the correlation function, the Bell violation, and the CHSH analysis. All computations are performed directly in Kleis.")

// Numerical computations for correlation curve
define n_angles = linspace(0.0, 3.14159265, 60)

// POT/QM prediction: E(θ) = -cos(θ)
define corr_pot = list_map(lambda theta . 0.0 - cos(theta), n_angles)

// Classical (local hidden variable) prediction: E(θ) = -1 + 2θ/π (linear)
define corr_classical = list_map(lambda theta . 0.0 - 1.0 + 2.0 * theta / 3.14159265, n_angles)

// Figure 1: Correlation function
define fig_correlation = ArxivDiagram("fig:correlation",
    "Correlation $E(a,b)$ as a function of the angle $theta$ between detector settings. Blue: POT prediction $E = -cos(theta)$, which matches quantum mechanics exactly. Red dashed: the strongest possible correlation from any local hidden variable (LHV) model, which is linear in $theta$. The curvature of the quantum/POT prediction is what enables Bell violation — the quantum curve 'bulges' beyond the classical bound in the region $0 < theta < pi \\/ 2$.",
    export_typst_fragment(
        plot(n_angles, corr_pot, color = "blue", label = "POT / Quantum: −cos(θ)"),
        plot(n_angles, corr_classical, color = "red", label = "Classical (LHV): linear"),
        title = "$\"Correlation Function: POT vs Classical\"$",
        xlabel = "$theta \"(radians)\"$",
        ylabel = "$E(a, b)$",
        legend_position = "right + bottom",
        width = 10
    )
)

// Bell inequality: |E(a,b) - E(a,c)| vs 1 + E(b,c)
// Fix a=0, vary c from 0 to π, set b = c/2 (midpoint between a and c)
define bell_angles = linspace(0.01, 3.14159265, 60)
define bell_lhs_data = list_map(lambda c .
    abs((0.0 - cos(c / 2.0)) - (0.0 - cos(c))),
    bell_angles)
define bell_rhs_data = list_map(lambda c .
    1.0 + (0.0 - cos(c / 2.0)),
    bell_angles)

// Figure 2: Bell inequality violation region
define fig_bell = ArxivDiagram("fig:bell",
    "Bell inequality test: $|E(a,b) - E(a,c)|$ (blue) vs the classical bound $1 + E(b,c)$ (red), with $a = 0$ and $b = c \\/ 2$. Where blue exceeds red, Bell's inequality is violated. The violation region spans roughly $0 < c < 2 pi \\/ 3$, confirming that the POT correlation function is incompatible with any local hidden variable model. The maximum violation occurs near $c = pi \\/ 2$.",
    export_typst_fragment(
        plot(bell_angles, bell_lhs_data, color = "blue", label = "|E(a,b) − E(a,c)|"),
        plot(bell_angles, bell_rhs_data, color = "red", label = "1 + E(b,c)  [classical bound]"),
        title = "$\"Bell Inequality Violation Region\"$",
        xlabel = "$c \"(radians)\"$",
        ylabel = "$\"value\"$",
        legend_position = "right + top",
        width = 10
    )
)

// CHSH S-parameter as a function of a relative angle offset
// Standard: a=0, a'=δ, b=δ/2, b'=3δ/2
define chsh_offsets = linspace(0.01, 1.5708, 60)
define chsh_s_data = list_map(lambda d .
    abs((0.0 - cos(d / 2.0)) - (0.0 - cos(3.0 * d / 2.0)) + (0.0 - cos(d / 2.0)) + (0.0 - cos(d / 2.0))),
    chsh_offsets)
define chsh_classical_bound = list_map(lambda d . 2.0, chsh_offsets)

// Figure 3: CHSH parameter
define fig_chsh = ArxivDiagram("fig:chsh",
    "CHSH parameter $S$ as a function of the angular offset $delta$ (with $a = 0$, $a' = delta$, $b = delta \\/ 2$, $b' = 3 delta \\/ 2$). Blue: POT/QM prediction. Red: classical bound $S = 2$. The maximum $S = 2 sqrt(2) approx 2.83$ occurs at $delta = pi \\/ 4$, saturating Tsirelson's bound and matching experimental observations.",
    export_typst_fragment(
        plot(chsh_offsets, chsh_s_data, color = "blue", label = "S (POT / QM)"),
        plot(chsh_offsets, chsh_classical_bound, color = "red", label = "Classical bound: S = 2"),
        title = "$\"CHSH Parameter\"$",
        xlabel = "$delta \"(radians)\"$",
        ylabel = "$S$",
        legend_position = "right + top",
